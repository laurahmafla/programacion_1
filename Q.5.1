X=linspace(0,2*pi,20);
Y1=sin(X);
Y2=cos(X);
Y3=Y1+Y2;
Y4 =Y1-Y2;
plot(X,Y1,'K*:')

hold on
plot(X,Y2,'r--')
hold on
plot(X,Y3,'b')
hold on
plot(X,Y4,'g')
hold off
box off 
title('Trigonometric Functions with “Box Off”')
box on 
title ('Trigonometric Functions with “Box On”')
grid on
xlabel('Independent Variable X')
ylabel('Dependent Variable Y')
title('Trigonometric Functions with “Grid On”')
grid off
title('Trigonometric Functions with “Grid off”')
axis ([0 2*pi -2 1.5])
axis off 
legend ('sin(X)','cos(X)','sin(X)+cos(X)','sin(X)-cos(X)')
